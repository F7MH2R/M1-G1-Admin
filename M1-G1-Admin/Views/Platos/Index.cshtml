@model IEnumerable<M1_G1_Admin.Models.Platos>

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <style>
        body {
            background-color: #000;
            color: #fff;
        }

        .container {
            margin-top: 50px;
        }

        .table-container {
            background-color: #333; /* Cambiado a blanco */
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
        }

        .btn {
            margin-right: 5px;
            transition: all 0.3s ease;
        }

            .btn:hover {
                transform: translateY(-3px);
            }

        .action-links {
            display: flex;
            justify-content: center;
        }

            .action-links a {
                text-decoration: none;
            }

        .btn-edit {
            background-color: #007bff;
            color: #fff;
        }

            .btn-edit:hover {
                background-color: #0056b3;
                color: #fff;
            }

        .btn-details {
            background-color: #17a2b8;
            color: #fff;
        }

            .btn-details:hover {
                background-color: #138496;
                color: #fff;
            }

        .btn-delete {
            background-color: #dc3545;
            color: #fff;
        }

            .btn-delete:hover {
                background-color: #bb2d3b;
                color: #fff;
            }

        .table-container tbody td {
            color: #fff;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="table-container">
            <h1 class="text-center mb-4">Platos</h1>
            <p class="text-right">
                <a asp-action="Create" class="btn btn-primary">Crear Nuevo</a>
            </p>
            <table class="table table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Nombre</th>
                        <th scope="col">Descripcion</th>
                        <th scope="col">Precio</th>
                        <th scope="col">Disponible</th>
                        <th scope="col">Categoria</th>
                        <th scope="col">Bebida</th>
                        <th scope="col" class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.nombre)</td>
            <td>@Html.DisplayFor(modelItem => item.descripcion)</td>
            <td>@Html.DisplayFor(modelItem => item.precio)</td>
                            <td>@(item.disponible.HasValue ? (item.disponible.HasValue && item.disponible.Value ? "Si" : "No") : "No disponible")</td>
                            <td>@Html.DisplayFor(modelItem => item.categoria_id)</td>
                            <td>@(item.es_bebida.HasValue ? (item.es_bebida.HasValue && item.es_bebida.Value ? "Si" : "No") : "No disponible")</td>
                            <td class="action-links">
                                <a asp-action="Edit" asp-route-id="@item.plato_id" class="btn btn-edit">Editar</a>
                                <a asp-action="Details" asp-route-id="@item.plato_id" class="btn btn-details">Detalles</a>
                                <a asp-action="Delete" asp-route-id="@item.plato_id" class="btn btn-delete">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
