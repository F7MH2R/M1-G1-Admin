@model M1_G1_Admin.Models.Mesa

@{
    ViewData["Title"] = "Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <style>
        body {
            background-color: #000;
            color: #fff;
        }
        .table{
        color:aliceblue}
        .container {
            margin-top: 50px;
        }

        .details-container {
            color:white
            background-color: #222;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
        }

        .back-link {
            margin-top: 20px;
            display: block;
            color: #007bff;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="details-container" style="background-color: black; color: white;">
                    <h1 class="text-center mb-4">Detalles de la Mesa</h1>

                    <div class="table">
                        <!-- Sección para detalles de la mesa -->
                        <h4 class="mt-2">Mesa</h4>
                        <hr style="border-color: white;" />
                        <dl class="row">
                            <dt class="col-sm-4">Número de Asientos</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.numero_asientos)</dd>

                            <dt class="col-sm-4">Número de Mesa</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.numero_mesa)</dd>

                            <dt class="col-sm-4">Estado de la Mesa</dt>
                            <dd class="col-sm-8">
                                @(Model.estado_mesa.HasValue
                                    ? (Model.estado_mesa.Value ? "Disponible" : "Ocupada")
                                    : "No disponible")
                            </dd>
                        </dl>
                    </div>

                    <div class="actions mt-3">
                        <!-- Sección para acciones -->
                        <a asp-action="Edit" asp-route-id="@Model?.id" class="btn btn-outline-primary mr-2">Editar</a>
                        <a asp-action="Index" class="btn btn-outline-secondary">Volver a la Lista</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoF" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-pzjw8f+cg6Lvb3cbv9/9Wraf61zZMLJmCCMwp5Pb+iqOvya2lsF9b7hCiN5Xr6jJ" crossorigin="anonymous"></script>
</body>
</html>
