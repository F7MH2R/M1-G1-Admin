@model M1_G1_Admin.Models.Mesa

@{
    ViewData["Title"] = "Delete";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <style>
        body {
            background-color: #000;
            color: #fff;
        }

        .container {
            margin-top: 50px;
        }

        .delete-container {
            background-color: #222;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
        }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }

            .btn-danger:hover {
                background-color: #bb2d3b;
                border-color: #bb2d3b;
            }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }

            .btn-secondary:hover {
                background-color: #5a6268;
                border-color: #545b62;
            }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="delete-container">
                    <h1 class="text-center mb-4">Delete Mesa</h1>
                    <h3 class="text-center">Are you sure you want to delete this?</h3>
                    <div>
                        <h4>Mesa</h4>
                        <hr />
                        <dl class="row">
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.numero_asientos)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.numero_asientos)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.numero_mesa)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.numero_mesa)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.estado_mesa)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.estado_mesa)
                            </dd>
                        </dl>
                    </div>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="id" />
                        <button type="submit" class="btn btn-danger">Delete</button> |
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoF" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-pzjw8f+cg6Lvb3cbv9/9Wraf61zZMLJmCCMwp5Pb+iqOvya2lsF9b7hCiN5Xr6jJ" crossorigin="anonymous"></script>
</body>
</html>
