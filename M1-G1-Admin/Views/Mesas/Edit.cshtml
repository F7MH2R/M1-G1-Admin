@model M1_G1_Admin.Models.Mesa

@{
    ViewData["Title"] = "Edit";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <style>
        body {
            background-color: #000;
            color: #fff;
        }

        .container {
            margin-top: 50px;
        }

        .form-container {
            background-color: #222;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }

        .back-link {
            margin-top: 20px;
            display: block;
            color: #007bff;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="form-container">
                    <h1 class="text-center mb-4">Edit</h1>
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="id" />
                        <div class="form-group">
                            <label asp-for="numero_asientos" class="control-label"></label>
                            <input asp-for="numero_asientos" class="form-control" />
                            <span asp-validation-for="numero_asientos" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="numero_mesa" class="control-label"></label>
                            <input asp-for="numero_mesa" class="form-control" />
                            <span asp-validation-for="numero_mesa" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Estado</label>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" asp-for="estado_mesa" value="true" />
                                <label class="form-check-label">Disponible</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" asp-for="estado_mesa" value="false" />
                                <label class="form-check-label">Ocupada</label>
                            </div>
                            <span asp-validation-for="estado_mesa" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="container mt-3">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div>
                    <a asp-action="Index" class="back-link">Back to List</a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoF" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-pzjw8f+cg6Lvb3cbv9/9Wraf61zZMLJmCCMwp5Pb+iqOvya2lsF9b7hCiN5Xr6jJ" crossorigin="anonymous"></script>
</body>
</html>
