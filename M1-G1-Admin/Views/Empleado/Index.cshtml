@model IEnumerable<M1_G1_Admin.Models.Empleado>

@{
    ViewData["Title"] = "Administración de empleados";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

<h1>Administración de Empleados</h1>

<p>
    <a asp-action="Create">Crear Nuevo</a>
</p>

<div class="table-responsive">
    <table class="table table-bordered table-striped" style="color: white;">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.nombre)</th>
                <th>@Html.DisplayNameFor(model => model.dui)</th>
                <th>@Html.DisplayNameFor(model => model.fecha_nacimiento)</th>
                <th>@Html.DisplayNameFor(model => model.telefono)</th>
                <th>@Html.DisplayNameFor(model => model.direccion)</th>
                <th>@Html.DisplayNameFor(model => model.telefono_referencia)</th>
                <th>@Html.DisplayNameFor(model => model.cargo_id)</th>
                <th>@Html.DisplayNameFor(model => model.estado_id)</th>
                <th>@Html.DisplayNameFor(model => model.salario)</th>
                <th>@Html.DisplayNameFor(model => model.fecha_contratacion)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="color: white;">@Html.DisplayFor(modelItem => item.nombre)</td>
                    <td style="color: white;">@Html.DisplayFor(modelItem => item.dui)</td>
                    <td style="color: white;">@Html.DisplayFor(modelItem => item.fecha_nacimiento)</td>
                    <td style="color: white;">@Html.DisplayFor(modelItem => item.telefono)</td>
                    <td style="color: white;">@Html.DisplayFor(modelItem => item.direccion)</td>
                    <td style="color: white;">@Html.DisplayFor(modelItem => item.telefono_referencia)</td>
                    <td style="color: white;">@Html.DisplayFor(modelItem => item.cargo_id)</td>
                    <td style="color: white;">@Html.DisplayFor(modelItem => item.estado_id)</td>
                    <td style="color: white;">@Html.DisplayFor(modelItem => item.salario)</td>
                    <td style="color: white;">@Html.DisplayFor(modelItem => item.fecha_contratacion)</td>
                    <td>
                        <a class="action-link" asp-action="Edit" asp-route-id="@item.id" style="color: green;"><i class="fas fa-pencil-alt" style="font-size: 20px;"></i> Editar</a> |
                        <a class="action-link" asp-action="Details" asp-route-id="@item.id" style="color: blue;"><i class="fas fa-info-circle" style="font-size: 24px;"></i> Detalles</a> |
                        <a class="action-link" asp-action="Delete" asp-route-id="@item.id" style="color: red;"><i class="fas fa-trash-alt" style="font-size: 28px;"></i> Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


