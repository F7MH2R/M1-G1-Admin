@model IEnumerable<M1_G1_Admin.Models.Estado>

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.tipo_estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.tipo_estado)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id_estado">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id_estado">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id_estado">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
