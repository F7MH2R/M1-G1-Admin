@model IEnumerable<M1_G1_Admin.Models.Promociones>

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
<h1>Index</h1>

<p>
    <a asp-action="Create">Crear Nuevo</a>
</p>
<div class="table-responsive">
    <table class="table table-bordered table-striped" style="color: white;">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.nombre)</th>
                <th>@Html.DisplayNameFor(model => model.descripcion)</th>
                <th>@Html.DisplayNameFor(model => model.descuento)</th>
                <th>@Html.DisplayNameFor(model => model.fecha_inicio)</th>
                <th>@Html.DisplayNameFor(model => model.fecha_fin)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="color: white;">@Html.DisplayFor(modelItem => item.nombre)</td>
                    <td style="color: white;">@Html.DisplayFor(modelItem => item.descripcion)</td>
                    <td style="color: white;">@Html.DisplayFor(modelItem => item.descuento)</td>
                    <td style="color: white;">@Html.DisplayFor(modelItem => item.fecha_inicio)</td>
                    <td style="color: white;">@Html.DisplayFor(modelItem => item.fecha_fin)</td>
                    <td>
                        <a class="action-link" asp-action="Edit" asp-route-id="@item.promocion_id" style="color: green;"><i class="fas fa-pencil-alt" style="font-size: 20px;"></i> Editar</a> |
                        <a class="action-link" asp-action="Details" asp-route-id="@item.promocion_id" style="color: blue;"><i class="fas fa-info-circle" style="font-size: 24px;"></i> Detalles</a> |
                        <a class="action-link" asp-action="Delete" asp-route-id="@item.promocion_id" style="color: red;"><i class="fas fa-trash-alt" style="font-size: 28px;"></i> Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

