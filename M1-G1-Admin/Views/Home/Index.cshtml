@{
    ViewData["Title"] = "Home Page";
    Layout = "_HomeLayout";

}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bienvenido a Dulce Sabor</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link href="https://fonts.cdnfonts.com/css/open-sans" rel="stylesheet">
</head>
<body>
    <div class="container">
        <div class="container text-center">
            <div class="row justify-content-center">
                <div class="col-4">
                    <a
                       class="list-group-item list-group-item-action bg-dark text-light"
                       asp-controller="Home" asp-action="Index">
                        <img src="@Url.Content("~/images/logo-home.png")" style="width:50%" alt="Inicio" />
                        <img src="@Url.Content("~/images/logo-home-nombre.jpg")" style="width:60%"/>
                    </a>
                </div>
            </div>
            <div class="row justify-content-around">
                <div class="col-4">
                    <a class="list-group-item list-group-item-action bg-dark text-light"
                       asp-controller="Empleado" asp-action="Index">
                        <img src="@Url.Content("~/images/empleados.png")" style="width:40%" alt="Empleados" />
                        <div>Empleados</div>
                    </a>
                </div>
                <div class="col-4">
                    <div></div>
                </div>
                <div class="col-4">
                    <a class="list-group-item list-group-item-action bg-dark text-light"
                       asp-controller="Combos" asp-action="Index">
                        <img src="@Url.Content("~/images/comboBlanco.png")" style="width:40%" alt="Combos" />
                        <div>Combos</div>
                    </a>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-4">
                    <a class="list-group-item list-group-item-action bg-dark text-light"
                       asp-controller="Platos" asp-action="Index">
                        <img src="@Url.Content("~/images/platosBlanco.png")" style="width:40%" alt="Platos" />
                        <div>Platos</div>
                    </a>
                </div>
            </div>
            <div class="row justify-content-evenly">
                <div class="col-4">
                    <a class="list-group-item list-group-item-action bg-dark text-light"
                       asp-controller="Promociones" asp-action="Index">
                        <img src="@Url.Content("~/images/saleBlanco.png")" style="width:40%" alt="Promociones" />
                        <div>Promociones</div>
                    </a>
                </div>
                <div class="col-4">
                    <div></div>
                </div>
                <div class="col-4">
                    <a class="list-group-item list-group-item-action bg-dark text-light"
                       asp-controller="Mesas" asp-action="Index">
                        <img src="@Url.Content("~/images/mesaBlanco.png")" style="width:40%" alt="Mesas" />
                        <div>Mesas</div>
                    </a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>




