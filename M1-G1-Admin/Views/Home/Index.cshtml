@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bienvenido a Dulce Sabor</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            color: #12100f;
        }

        .container-fondo {
            position: relative;
            text-align: center;
            width: 100%;
            height: 85vh; 
            background-image: url('@Url.Content("~/images/fondoDulceSabor.jpg")');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            border-radius: 10px;
        }

        .titulo {
            font-size: 2.5rem;
            font-weight: bold;
            background: linear-gradient(90deg, #9B2930, #FFFFFF);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;

        }

        .subtitulo {
            font-size: 1rem;
            margin-bottom: 40px;
            color: #FFFFFF;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="container-fondo">
            <h1 class="titulo">¡Bienvenido a Dulce Sabor!</h1>
            <p class="subtitulo">Sistema de control de restaurantes</p>
        </div>
    </div>
</body>
</html>




